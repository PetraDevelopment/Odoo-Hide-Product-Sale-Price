<odoo>
    <record id="kanban_sale_price" model="ir.ui.view">
        <field name="name">kanban_sale_price</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_kanban_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='product_lst_price']" position="attributes">
               <attribute name="groups">hide_price.group_hide_sale_price</attribute>
            </xpath>  
        </field>
    </record>
</odoo>    