<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_variant_view" model="ir.ui.view">
        <field name="name">purchase.variant.view</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='purchase']" position="inside">
                <field name="seller_ids" invisible="1"/>
                    <group name="bill" invisible="1">
                        <field name="variant_seller_ids" invisible="0">
                            <tree>
                                <field name="partner_id" />
                                <field name="price" groups="hide_price17.group_hide_sale_price"/>     
                                <field name="currency_id" groups="hide_price17.group_hide_sale_price"/>
                                <field name="delay" />
                            </tree>
                        </field>
                    </group>
            </xpath>
        </field>
    </record>


</odoo>
